# EditorConfig - Tüm editorler için geçerli
# https://editorconfig.org

root = true

# Tüm dosyalar için varsayılan ayarlar
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# HTML, CSS, JavaScript, JSON
[*.{html,css,js,json}]
charset = utf-8
indent_style = space
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2
